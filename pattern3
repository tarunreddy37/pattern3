import java.util.*;
class pattern2
{
	public static void main(String args[])
    {
	int n,i,j;
	Scanner sc=new Scanner(System.in);
	System.out.println("enter n value");
	n=sc.nextInt();
	char ch='A';
	for(i=1;i<=n;i++)
	{
	for(j=1;j<i+1;j++)
	{
	System.out.print(" "+(ch++)+" ");
	}
	System.out.println();
	}
	}
	}
